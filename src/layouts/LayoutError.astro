---
import { ViewTransitions } from 'astro:transitions';
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<link rel="stylesheet" href="https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css" />
		<link rel="icon" href="./eagle-logo2.png" type="eagle-logo">
		<title>{title}</title>
		<ViewTransitions />
	</head>
	<body class="bg-no-repeat bg-fixed min-h-full  bg-gradient-to-t from-violet-950 via-violet-950 to-backgound">

		<main class=" flex xl:flex-row lg:flex-row md:flex-row flex-col items-center xl:items-start lg:items-start md:items-start">
			<slot />
		</main>
	</body>
</html>
<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
			
		);
	}
	html {
		font-family: system-ui, sans-serif;
		color: white;
		margin: 0px;
		padding: 0px;
	}
</style>
